<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bor_profile_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ku"
                android:layout_marginRight="15dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/msg_delbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/png_delet_fd"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/bor_reply"
                    android:visibility="visible"
                    android:layout_below="@+id/msg_delbtn"
                    android:background="@drawable/png_reply"/>
            </RelativeLayout>


            <LinearLayout
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/bor_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:text="문준원"
                        android:textSize="14sp"/>

                    <RelativeLayout
                        android:layout_marginRight="70dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/bor_stext"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="안녕하세요으엥에엥에에ㅔ메엔은ㅇ에에ㅔㄴ믐느매ㅡㄴ므내메나ㅐㅁ나"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="17dp">
                        <TextView
                            android:id="@+id/bor_date"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:textSize="11sp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="2016.07.26"/>
                    </RelativeLayout>
                </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>