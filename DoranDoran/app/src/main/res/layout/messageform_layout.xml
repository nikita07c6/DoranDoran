<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/relative_close">
            <Button
                android:layout_marginTop="24dp"
                android:id="@+id/ans_close"
                android:layout_marginLeft="16dp"
                android:background="@drawable/png_x"
                android:layout_width="14dp"
                android:layout_height="14dp" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:id="@+id/ans_send"
            android:text="완료"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="48dp"
        android:layout_marginTop="37dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rec_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="받는 사람"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뀽"
            android:id="@+id/rec_nick_text"
            android:layout_marginLeft="26dp"
            android:textColor="#000000"
            android:textSize="16sp"/>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/png_line"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/rec_text"
        android:background="@null"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:maxLength="200"
        android:hint="메세지작성은 200자로 제한되어있습니다."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <requestFocus/>

</LinearLayout>